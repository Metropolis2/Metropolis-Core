{
  "build": {
    "devPath": "./gui",
    "distDir": "./gui",
    "withGlobalTauri": true,
    "features": ["gui"]
  },
  "package": {
    "productName": "Metropolis2GUI",
    "version": "1.0.0-7"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "dialog": {
        "all": false,
        "open": true
      }
    },
    "windows": [
      {
        "title": "METROPOLIS2 GUI - 1.0.0-7",
        "width": 700,
        "height": 900
      }
    ],
    "security": {
      "csp": null
    },
    "bundle": {
      "active": true,
      "targets": "all",
      "identifier": "com.metropolis2.metropolis2gui",
      "icon": [
        "icons/32x32.png",
        "icons/icon.ico"
      ]
    }
  }
}
